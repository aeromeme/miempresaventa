{
  "openapi": "3.0.1",
  "info": {
    "title": "API de Ventas",
    "description": "API para gestión de ventas",
    "contact": { "name": "Soporte", "email": "soporte@miempresa.com" },
    "version": "1.0"
  },
  "servers": [{ "url": "http://localhost:8080", "description": "Local ENV" }],
  "security": [{ "bearerAuth": [] }],
  "tags": [
    { "name": "Ventas", "description": "API para gestión de ventas" },
    {
      "name": "Autenticación",
      "description": "Endpoints para autenticación de usuarios"
    },
    { "name": "Productos", "description": "API para gestión de productos" },
    { "name": "Clientes", "description": "API para gestión de clientes" },
    {
      "name": "VentasDashboard",
      "description": "API para consultas del dashboard de ventas"
    }
  ],
  "paths": {
    "/api/ventas/{id}": {
      "get": {
        "tags": ["Ventas"],
        "operationId": "getById",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": { "type": "string" }
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "*/*": { "schema": { "$ref": "#/components/schemas/VentaDTO" } }
            }
          }
        }
      },
      "put": {
        "tags": ["Ventas"],
        "operationId": "update",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": { "type": "string" }
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/UpdateVentaDTO" }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "*/*": { "schema": { "$ref": "#/components/schemas/VentaDTO" } }
            }
          }
        }
      }
    },
    "/api/productos/{id}": {
      "get": {
        "tags": ["Productos"],
        "summary": "Obtener producto por ID",
        "description": "Busca y retorna un producto específico por su identificador único",
        "operationId": "obtenerPorId",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "ID único del producto",
            "required": true,
            "schema": { "type": "string" }
          }
        ],
        "responses": {
          "200": {
            "description": "Producto encontrado exitosamente",
            "content": {
              "*/*": {
                "schema": { "$ref": "#/components/schemas/ProductoDto" }
              }
            }
          },
          "404": {
            "description": "Producto no encontrado",
            "content": {
              "*/*": {
                "schema": { "$ref": "#/components/schemas/ProblemDetail" }
              }
            }
          }
        }
      },
      "put": {
        "tags": ["Productos"],
        "summary": "Actualizar producto",
        "description": "Actualiza un producto existente",
        "operationId": "actualizar",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "ID único del producto",
            "required": true,
            "schema": { "type": "string" }
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/UpdateProductoDto" }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "Producto actualizado exitosamente",
            "content": {
              "*/*": {
                "schema": { "$ref": "#/components/schemas/ProductoDto" }
              }
            }
          },
          "404": {
            "description": "Producto no encontrado",
            "content": {
              "*/*": {
                "schema": { "$ref": "#/components/schemas/ProblemDetail" }
              }
            }
          },
          "400": {
            "description": "Datos de entrada inválidos",
            "content": {
              "*/*": {
                "schema": { "$ref": "#/components/schemas/ProblemDetail" }
              }
            }
          }
        }
      },
      "delete": {
        "tags": ["Productos"],
        "summary": "Eliminar producto",
        "description": "Elimina un producto del sistema",
        "operationId": "eliminar",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "ID único del producto",
            "required": true,
            "schema": { "type": "string" }
          }
        ],
        "responses": {
          "404": {
            "description": "Producto no encontrado",
            "content": {
              "*/*": {
                "schema": { "$ref": "#/components/schemas/ProblemDetail" }
              }
            }
          },
          "204": {
            "description": "Producto eliminado exitosamente",
            "content": { "*/*": { "schema": { "type": "object" } } }
          }
        }
      }
    },
    "/api/ventas": {
      "get": {
        "tags": ["Ventas"],
        "operationId": "getAll",
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "*/*": {
                "schema": {
                  "type": "array",
                  "items": { "$ref": "#/components/schemas/VentaDTO" }
                }
              }
            }
          }
        }
      },
      "post": {
        "tags": ["Ventas"],
        "summary": "Crear nuevo producto",
        "description": "Crea un nuevo producto en el sistema",
        "operationId": "create",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/CreateVentaDTO" }
            }
          },
          "required": true
        },
        "responses": {
          "400": {
            "description": "Datos de entrada inválidos",
            "content": {
              "*/*": {
                "schema": { "$ref": "#/components/schemas/ProblemDetail" }
              }
            }
          },
          "201": {
            "description": "Producto creado exitosamente",
            "content": {
              "*/*": { "schema": { "$ref": "#/components/schemas/VentaDTO" } }
            }
          }
        }
      }
    },
    "/api/v1/auth/login": {
      "post": {
        "tags": ["Autenticación"],
        "summary": "Autenticar usuario",
        "description": "Autentica un usuario y retorna un token JWT",
        "operationId": "authenticate",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/AuthenticationRequest" }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "Autenticación exitosa",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/AuthenticationResponse"
                }
              }
            }
          },
          "401": { "description": "Credenciales inválidas" }
        }
      }
    },
    "/api/productos": {
      "get": {
        "tags": ["Productos"],
        "summary": "Listar todos los productos",
        "description": "Obtiene una lista de todos los productos disponibles",
        "operationId": "listarTodos",
        "responses": {
          "200": {
            "description": "Lista de productos obtenida exitosamente",
            "content": {
              "*/*": {
                "schema": {
                  "type": "array",
                  "items": { "$ref": "#/components/schemas/ProductoDto" }
                }
              }
            }
          },
          "500": {
            "description": "Error interno al obtener los productos",
            "content": {
              "*/*": {
                "schema": { "$ref": "#/components/schemas/ProblemDetail" }
              }
            }
          }
        }
      },
      "post": {
        "tags": ["Productos"],
        "summary": "Crear nuevo producto",
        "description": "Crea un nuevo producto en el sistema",
        "operationId": "crear",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/CreateProductoDto" }
            }
          },
          "required": true
        },
        "responses": {
          "201": {
            "description": "Producto creado exitosamente",
            "content": {
              "*/*": {
                "schema": { "$ref": "#/components/schemas/ProductoDto" }
              }
            }
          },
          "400": {
            "description": "Datos de entrada inválidos",
            "content": {
              "*/*": {
                "schema": { "$ref": "#/components/schemas/ProblemDetail" }
              }
            }
          }
        }
      }
    },
    "/api/ventas/estado/{estado}": {
      "get": {
        "tags": ["Ventas"],
        "operationId": "getByEstado",
        "parameters": [
          {
            "name": "estado",
            "in": "path",
            "required": true,
            "schema": { "type": "string" }
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "*/*": {
                "schema": {
                  "type": "array",
                  "items": { "$ref": "#/components/schemas/VentaDTO" }
                }
              }
            }
          }
        }
      }
    },
    "/api/ventas/cliente/{clienteId}": {
      "get": {
        "tags": ["Ventas"],
        "operationId": "getByClienteId",
        "parameters": [
          {
            "name": "clienteId",
            "in": "path",
            "required": true,
            "schema": { "type": "string" }
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "*/*": {
                "schema": {
                  "type": "array",
                  "items": { "$ref": "#/components/schemas/VentaDTO" }
                }
              }
            }
          }
        }
      }
    },
    "/api/productos/config/monedas": {
      "get": {
        "tags": ["Productos"],
        "summary": "Obtener configuración de monedas",
        "description": "Obtiene la moneda por defecto y las monedas soportadas",
        "operationId": "obtenerConfiguracionMonedas",
        "responses": {
          "500": {
            "description": "Error al obtener la configuración",
            "content": {
              "*/*": {
                "schema": { "$ref": "#/components/schemas/ProblemDetail" }
              }
            }
          },
          "200": {
            "description": "Configuración obtenida exitosamente",
            "content": {
              "*/*": {
                "schema": { "$ref": "#/components/schemas/MonedaConfigDto" }
              }
            }
          }
        }
      }
    },
    "/api/productos/buscar": {
      "get": {
        "tags": ["Productos"],
        "summary": "Buscar productos por nombre",
        "description": "Busca productos que contengan el texto especificado en el nombre",
        "operationId": "buscarPorNombre",
        "parameters": [
          {
            "name": "nombre",
            "in": "query",
            "description": "Texto a buscar en el nombre del producto",
            "required": true,
            "schema": { "type": "string" }
          }
        ],
        "responses": {
          "500": {
            "description": "Error interno al realizar la búsqueda",
            "content": {
              "*/*": {
                "schema": { "$ref": "#/components/schemas/ProblemDetail" }
              }
            }
          },
          "200": {
            "description": "Búsqueda realizada exitosamente",
            "content": {
              "*/*": {
                "schema": {
                  "type": "array",
                  "items": { "$ref": "#/components/schemas/ProductoDto" }
                }
              }
            }
          }
        }
      }
    },
    "/api/dashboard/ventas/productos/top": {
      "get": {
        "tags": ["VentasDashboard"],
        "operationId": "obtenerTopProductosVendidos",
        "parameters": [
          {
            "name": "limit",
            "in": "query",
            "required": false,
            "schema": { "type": "integer", "format": "int32" }
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "*/*": {
                "schema": {
                  "type": "array",
                  "items": { "$ref": "#/components/schemas/TopProductoDTO" }
                }
              }
            }
          }
        }
      }
    },
    "/api/dashboard/ventas/ingresos/por-mes": {
      "get": {
        "tags": ["VentasDashboard"],
        "operationId": "obtenerIngresoPorMes",
        "parameters": [
          {
            "name": "anio",
            "in": "query",
            "required": false,
            "schema": { "type": "integer", "format": "int32" }
          },
          {
            "name": "mes",
            "in": "query",
            "required": false,
            "schema": { "type": "integer", "format": "int32" }
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "*/*": {
                "schema": {
                  "$ref": "#/components/schemas/IngresosMensualesDTO"
                }
              }
            }
          }
        }
      }
    },
    "/api/dashboard/ventas/ingresos/por-anio/{anio}": {
      "get": {
        "tags": ["VentasDashboard"],
        "operationId": "obtenerIngresosPorAnio",
        "parameters": [
          {
            "name": "anio",
            "in": "path",
            "required": true,
            "schema": { "type": "integer", "format": "int32" }
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "*/*": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/IngresosMensualesDTO"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/dashboard/ventas/clientes/top-ingresos": {
      "get": {
        "tags": ["VentasDashboard"],
        "operationId": "obtenerClientesTopIngresos",
        "parameters": [
          {
            "name": "limit",
            "in": "query",
            "required": false,
            "schema": { "type": "integer", "format": "int32" }
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "*/*": {
                "schema": {
                  "type": "array",
                  "items": { "$ref": "#/components/schemas/ClienteIngresosDTO" }
                }
              }
            }
          }
        }
      }
    },
    "/api/clientes": {
      "get": {
        "tags": ["Clientes"],
        "summary": "Obtener clientes paginados",
        "description": "Obtiene una lista paginada de todos los clientes registrados en el sistema",
        "operationId": "obtenerClientes",
        "parameters": [
          {
            "name": "page",
            "in": "query",
            "description": "Número de página (inicia en 0)",
            "required": false,
            "schema": { "type": "integer", "format": "int32", "default": 0 },
            "example": 0
          },
          {
            "name": "size",
            "in": "query",
            "description": "Cantidad de elementos por página",
            "required": false,
            "schema": { "type": "integer", "format": "int32", "default": 10 },
            "example": 10
          }
        ],
        "responses": {
          "200": {
            "description": "Lista de clientes obtenida exitosamente",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/PagedResponse" }
              }
            }
          },
          "400": {
            "description": "Parámetros de paginación inválidos",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/ProblemDetail" }
              }
            }
          }
        }
      }
    },
    "/api/clientes/buscar": {
      "get": {
        "tags": ["Clientes"],
        "summary": "Buscar clientes con filtros combinados",
        "description": "Obtiene una lista paginada de clientes aplicando filtros por nombre y/o correo electrónico",
        "operationId": "obtenerClientesFiltrados",
        "parameters": [
          {
            "name": "query",
            "in": "query",
            "description": "Texto a buscar en el nombre o correo del cliente",
            "required": false,
            "schema": { "type": "string" },
            "example": "Juan o juan@gmail.com"
          },
          {
            "name": "page",
            "in": "query",
            "description": "Número de página (inicia en 0)",
            "required": false,
            "schema": { "type": "integer", "format": "int32", "default": 0 },
            "example": 0
          },
          {
            "name": "size",
            "in": "query",
            "description": "Cantidad de elementos por página",
            "required": false,
            "schema": { "type": "integer", "format": "int32", "default": 10 },
            "example": 10
          }
        ],
        "responses": {
          "200": {
            "description": "Lista de clientes con filtros aplicados obtenida exitosamente",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/PagedResponse" }
              }
            }
          },
          "400": {
            "description": "Parámetros inválidos o al menos un filtro es requerido",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/ProblemDetail" }
              }
            }
          }
        }
      }
    },
    "/api/clientes/buscar-por-nombre": {
      "get": {
        "tags": ["Clientes"],
        "summary": "Buscar clientes por nombre",
        "description": "Obtiene una lista paginada de clientes cuyo nombre contenga el texto especificado",
        "operationId": "obtenerClientesPorNombre",
        "parameters": [
          {
            "name": "nombre",
            "in": "query",
            "description": "Texto a buscar en el nombre del cliente",
            "required": true,
            "schema": { "type": "string" },
            "example": "Juan"
          },
          {
            "name": "page",
            "in": "query",
            "description": "Número de página (inicia en 0)",
            "required": false,
            "schema": { "type": "integer", "format": "int32", "default": 0 },
            "example": 0
          },
          {
            "name": "size",
            "in": "query",
            "description": "Cantidad de elementos por página",
            "required": false,
            "schema": { "type": "integer", "format": "int32", "default": 10 },
            "example": 10
          }
        ],
        "responses": {
          "200": {
            "description": "Lista de clientes filtrada obtenida exitosamente",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/PagedResponse" }
              }
            }
          },
          "400": {
            "description": "Parámetros inválidos o filtro de nombre requerido",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/ProblemDetail" }
              }
            }
          }
        }
      }
    },
    "/api/clientes/buscar-por-correo": {
      "get": {
        "tags": ["Clientes"],
        "summary": "Buscar clientes por correo electrónico",
        "description": "Obtiene una lista paginada de clientes cuyo correo electrónico contenga el texto especificado",
        "operationId": "obtenerClientesPorCorreo",
        "parameters": [
          {
            "name": "correo",
            "in": "query",
            "description": "Texto a buscar en el correo electrónico",
            "required": true,
            "schema": { "type": "string" },
            "example": "gmail.com"
          },
          {
            "name": "page",
            "in": "query",
            "description": "Número de página (inicia en 0)",
            "required": false,
            "schema": { "type": "integer", "format": "int32", "default": 0 },
            "example": 0
          },
          {
            "name": "size",
            "in": "query",
            "description": "Cantidad de elementos por página",
            "required": false,
            "schema": { "type": "integer", "format": "int32", "default": 10 },
            "example": 10
          }
        ],
        "responses": {
          "400": {
            "description": "Parámetros inválidos o filtro de correo requerido",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/ProblemDetail" }
              }
            }
          },
          "200": {
            "description": "Lista de clientes filtrada por correo obtenida exitosamente",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/PagedResponse" }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "UpdateLineaVentaDTO": {
        "required": ["cantidad", "precioUnitario", "productoId"],
        "type": "object",
        "properties": {
          "productoId": {
            "type": "string",
            "description": "ID del producto",
            "example": "A123"
          },
          "cantidad": {
            "minimum": 1,
            "type": "integer",
            "description": "Cantidad de productos",
            "format": "int32",
            "example": 2
          },
          "precioUnitario": {
            "minimum": 0.01,
            "exclusiveMinimum": false,
            "type": "number",
            "description": "Precio unitario del producto",
            "example": 100.0
          }
        },
        "description": "Datos para actualizar una línea de venta"
      },
      "UpdateVentaDTO": {
        "required": ["clienteId", "id", "lineasVenta"],
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "description": "ID de la venta",
            "example": "1"
          },
          "clienteId": {
            "type": "string",
            "description": "ID del cliente",
            "example": "123"
          },
          "lineasVenta": {
            "maxItems": 2147483647,
            "minItems": 1,
            "type": "array",
            "description": "Lista de líneas de venta",
            "items": { "$ref": "#/components/schemas/UpdateLineaVentaDTO" }
          }
        },
        "description": "Datos para actualizar una venta"
      },
      "ClienteDto": {
        "type": "object",
        "properties": {
          "clienteId": {
            "type": "string",
            "description": "Identificador único del cliente",
            "example": "123e4567-e89b-12d3-a456-426614174000"
          },
          "nombre": {
            "type": "string",
            "description": "Nombre completo del cliente",
            "example": "Juan Pérez Martínez"
          },
          "correo": {
            "type": "string",
            "description": "Correo electrónico del cliente",
            "example": "juan.perez@email.com"
          }
        },
        "description": "Datos de un cliente"
      },
      "LineaVentaDTO": {
        "type": "object",
        "properties": {
          "productoId": { "type": "string" },
          "cantidad": { "type": "integer", "format": "int32" },
          "precioUnitario": { "type": "number" },
          "subtotal": { "type": "number" }
        }
      },
      "VentaDTO": {
        "type": "object",
        "properties": {
          "id": { "type": "string" },
          "cliente": { "$ref": "#/components/schemas/ClienteDto" },
          "fechaVenta": { "type": "string", "format": "date-time" },
          "total": { "type": "number" },
          "estado": { "type": "string" },
          "lineasVenta": {
            "type": "array",
            "items": { "$ref": "#/components/schemas/LineaVentaDTO" }
          }
        }
      },
      "UpdateProductoDto": {
        "type": "object",
        "properties": {
          "nombre": {
            "maxLength": 200,
            "minLength": 2,
            "type": "string",
            "description": "Nuevo nombre del producto",
            "example": "Laptop Dell Inspiron 15"
          },
          "precio": {
            "minimum": 0.01,
            "exclusiveMinimum": false,
            "type": "number",
            "description": "Nuevo precio del producto",
